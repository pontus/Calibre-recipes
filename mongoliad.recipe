        soup = self.index_to_soup('http://mongoliad.com/contents')

        
        l = []

        for p in soup("tr"):
            try:
                link = 'http://mongoliad.com%s' % str(p.td.a['href'])
                title = p.td.a.contents[0]
               
                mtype = p('td')[1].contents[0]
                desc = p('td')[2].contents[0]


                l.append({'title': title,
                          'url': link,
                          'category': mtype,
                          'description': desc})


            except:
                pass

