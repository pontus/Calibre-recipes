    def get_browser(self):
        br = BasicNewsRecipe.get_browser()

        username = self.username
        password = self.password
        

        if username and password:
            br.open('https://www.mongoliad.com/login')
            
            br.select_form(nr=0)
            br['username']   = username
            br['password'] = password
            br.submit()
        return br


